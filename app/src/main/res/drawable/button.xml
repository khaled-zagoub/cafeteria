<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#92F3AF"
                android:centerColor="#92F3AF" android:angle="45"
                android:endColor="#edba0e">

            </gradient>
            <corners android:radius="10dp"></corners>
            <stroke android:color="#e93212" android:width="3dp"></stroke>
        </shape>

    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#f7edc9"
                android:centerColor="#ffe386" android:angle="45"
                android:endColor="#ffd23d"></gradient>
            <corners android:radius="10dp"></corners>

        </shape>

    </item>

</selector>